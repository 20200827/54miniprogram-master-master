.city-comparison {
  padding: 20rpx;
  background-color: #fff;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  margin-top: 20rpx;
}

.table {
  width: 100%;
  border-collapse: collapse;
}

.thead {
  background-color: #f7f8fa;
}

.tr {
  display: flex;
  width: 100%;
  border-bottom: 1rpx solid #eee;
}

.th, .td {
  flex: 1;
  padding: 16rpx;
  text-align: left;
  font-size: 26rpx;
}

.th {
  font-weight: 500;
  color: #666;
}

.td {
  color: #333;
}

.red {
  color: #e74c3c;
}

.green {
  color: #2ecc71;
}

.progress-bar {
  width: 100%;
  height: 10rpx;
  background-color: #eee;
  border-radius: 5rpx;
  margin-top: 10rpx;
}

.progress {
  height: 100%;
  border-radius: 5rpx;
}

.tr-details {
  width: 100%;
  padding: 20rpx;
  background-color: #f7f8fa;
}
