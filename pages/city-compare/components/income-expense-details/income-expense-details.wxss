.income-expense-details {
  padding: 20rpx;
  background-color: #fff;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  margin-top: 20rpx;
}

.summary {
  display: flex;
  justify-content: space-between;
  align-items: center;
  cursor: pointer;
}

.summary-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 24rpx;
  color: #666;
}

.income-value {
  color: #3498db;
  font-weight: 500;
}

.expense-value {
  color: #e74c3c;
  font-weight: 500;
}

.savings-value {
  color: #2ecc71;
  font-weight: 500;
}

.deficit-value {
  color: #e74c3c;
  font-weight: 500;
}

.arrow {
  width: 32rpx;
  height: 32rpx;
  transition: transform 0.3s;
}

.arrow.expanded {
  transform: rotate(180deg);
}

.details {
  margin-top: 20rpx;
}

.tabs {
  display: flex;
  border-bottom: 1rpx solid #eee;
}

.tab {
  padding: 16rpx 24rpx;
  font-size: 28rpx;
  color: #666;
  cursor: pointer;
  border-bottom: 4rpx solid transparent;
  transition: all 0.3s;
}

.tab.active {
  color: #3498db;
  border-bottom-color: #3498db;
  font-weight: 500;
}

.tab-content {
  padding-top: 20rpx;
}

.charts {
  width: 100%;
  height: 400rpx;
}
