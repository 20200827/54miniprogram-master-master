/* pages/calculator/calculator-common.wxss */

.container {
  background-color: #f7f7f5;
  min-height: 100vh;
  padding: 30rpx;
  box-sizing: border-box;
  font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
}

.header {
  display: flex;
  align-items: center;
  gap: 20rpx;
  padding: 40rpx 20rpx;
}

.header-icon {
  font-size: 56rpx;
}

.title {
  font-size: 48rpx;
  font-weight: 700;
  color: #1e1e1e;
}

.card {
  background-color: #ffffff;
  border-radius: 8rpx;
  padding: 40rpx;
  margin-bottom: 40rpx;
  border: 1px solid #e9e9e7;
  box-shadow: 0 1px 2px rgba(0, 0, 0, 0.03);
}

.input-group {
  margin-bottom: 30rpx;
}

.input-group:last-child {
  margin-bottom: 0;
}

.label {
  display: block;
  font-size: 28rpx;
  color: #7c7c7a;
  margin-bottom: 16rpx;
}

.input {
  width: 100%;
  height: 88rpx;
  padding: 0 24rpx;
  border-radius: 6rpx;
  background-color: #f7f7f5;
  border: 1px solid #e9e9e7;
  font-size: 32rpx;
  color: #333;
  box-sizing: border-box;
}

.input:focus {
  background-color: #fff;
  border-color: #007aff;
}

.btn-calculate {
  width: 100%;
  height: 96rpx;
  line-height: 96rpx;
  background-color: #007aff;
  color: white;
  font-size: 32rpx;
  border-radius: 8rpx;
  text-align: center;
  margin-bottom: 40rpx;
}

.btn-calculate:active {
  background-color: #0056b3;
}

.result-area {
  margin-top: 40rpx;
}

.result-card, .detail-card {
  background-color: #ffffff;
  border-radius: 8rpx;
  padding: 40rpx;
  margin-bottom: 20rpx;
  border: 1px solid #e9e9e7;
  box-shadow: 0 1px 2px rgba(0, 0, 0, 0.03);
}

.result-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.result-label {
  font-size: 30rpx;
  color: #333;
}

.result-value {
  font-size: 40rpx;
  font-weight: 600;
  color: #007aff;
}

.btn-copy {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  background-color: #f0f0ee;
  color: #333;
  font-size: 28rpx;
  border-radius: 8rpx;
  text-align: center;
}

.btn-copy:active {
  background-color: #e0e0de;
}

.detail-toggle {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 28rpx;
  color: #7c7c7a;
  padding: 20rpx 0;
}

.detail-toggle-icon {
  font-size: 24rpx;
}
