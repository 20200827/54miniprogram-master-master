@import "../calculator-common.wxss";

.picker-input {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
  height: 88rpx;
  padding: 0 24rpx;
  border-radius: 6rpx;
  background-color: #f7f7f5;
  border: 1px solid #e9e9e7;
  font-size: 32rpx;
  color: #333;
  box-sizing: border-box;
}

.picker-arrow {
  font-size: 24rpx;
  color: #b3b3b1;
}

.radio-group {
  display: flex;
  gap: 20rpx;
}

.radio-item {
  flex: 1;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  border-radius: 6rpx;
  background-color: #f7f7f5;
  border: 1px solid #e9e9e7;
  font-size: 28rpx;
  color: #7c7c7a;
  transition: all 0.2s ease-in-out;
}

.radio-item.selected {
  background-color: #007aff;
  color: white;
  border-color: #007aff;
}
