<view class="container">
  <view class="header">
    <text class="header-icon">🤒</text>
    <text class="title">病假工资计算器</text>
  </view>

  <view class="card">
    <view class="input-group">
      <text class="label">病假天数</text>
      <input type="digit" class="input" placeholder="请输入病假天数" bindinput="bindKeyInput" data-field="y" />
    </view>

    <view class="input-group">
      <text class="label">医疗期</text>
      <input type="digit" class="input" placeholder="请输入医疗期天数" bindinput="bindKeyInput" data-field="d" />
    </view>

    <view class="input-group">
      <text class="label">最低月工资标准</text>
      <input type="digit" class="input" placeholder="请输入最低月工资标准" bindinput="bindKeyInput" data-field="pm" />
    </view>
  </view>

  <button class="btn-calculate" bindtap="calculate">开始计算</button>

  <view class="result-area" wx:if="{{result !== null}}">
    <view class="result-card">
      <view class="result-item">
        <text class="result-label">病假工资</text>
        <text class="result-value">{{result}} 元</text>
      </view>
      <button class="btn-copy" bindtap="copyResult">复制结果</button>
    </view>

    <view class="detail-card" wx:if="{{detailProcess}}">
      <view class="detail-toggle" bindtap="toggleDetail">
        <text>详细计算过程</text>
        <text class="detail-toggle-icon">{{showDetail ? '▲' : '▼'}}</text>
      </view>
      <view class="detail-process" wx:if="{{showDetail}}">
        <text class="detail-content">{{detailProcess}}</text>
      </view>
    </view>
  </view>
</view>
