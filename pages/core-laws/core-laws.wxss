.container {
  padding: 30rpx; /* 增加整体左右边距，使内容更宽 */
  background-color: #FDF8E1;
  min-height: 100vh;
}

.header {
  text-align: center;
  padding: 40rpx 20rpx;
  margin-bottom: 30rpx;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  color: #000000;
  display: block;
  margin-bottom: 20rpx;
}

.subtitle {
  font-size: 28rpx;
  color: #666666;
  display: block;
  line-height: 1.5;
}

.search-section {
  margin-bottom: 20rpx; /* 搜索区域底部间距 */
}

.search-input-container {
  margin-bottom: 20rpx; /* 输入框与按钮之间的间距 */
  padding: 0 30rpx; /* 调整左右内边距，使其与.container的padding一致 */
}

.search-input {
  width: 600rpx; /* 直接设置宽度，至少是搜索按钮的两倍 */
  margin: 0 auto; /* 水平居中 */
  box-sizing: border-box; /* 包含padding和border在宽度内 */
  height: 80rpx;
  border: 1rpx solid #ddd;
  border-radius: 40rpx;
  padding: 0 20rpx; /* 增加input本身的padding */
  font-size: 28rpx;
  background: white;
  color: #333;
  display: block; /* 确保margin: auto生效 */
}

.search-button-container {
  text-align: center; /* 按钮居中 */
}

.search-btn {
  width: 80%; /* 按钮宽度 */
  max-width: 300rpx; /* 最大宽度限制 */
  height: 80rpx;
  border-radius: 40rpx;
  background: linear-gradient(135deg, #74b9ff 0%, #0984e3 100%);
  color: white;
  font-size: 28rpx;
  margin: 0 auto; /* 居中 */
  display: block; /* 确保按钮独占一行 */
}

.category-list {
  background: white;
  border-radius: 16rpx;
  padding: 0 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

/* 分类筛选标签 */
.filter-tabs {
  display: flex;
  justify-content: space-between; /* 分布项目，使其两端对齐 */
  margin: 20rpx 0 30rpx 0; /* 调整容器的上下外边距 */
  padding: 0 30rpx; /* 调整左右内边距，使其与输入框和提示框对齐 */
}

.filter-tab {
  flex: 1; /* 确保所有标签平均分配空间并适应屏幕宽度 */
  text-align: center;
  padding: 30rpx 10rpx; /* 调整内边距，增加垂直高度，减少水平空间以适应文字 */
  margin: 0 5rpx; /* 调整外边距，增加标签间距 */
  border-radius: 50rpx; /* 调整圆角，使其更圆润 */
  font-size: 28rpx; /* 稍微增大字体 */
  color: #666;
  background: #f8f8f8;
  transition: all 0.3s;
  white-space: nowrap; /* 强制文字不换行 */
  box-sizing: border-box; /* 确保内边距包含在宽度内 */
}

.filter-tab.active {
  background: linear-gradient(135deg, #74b9ff 0%, #0984e3 100%);
  color: white;
}

.filter-tab:active {
  transform: scale(0.95);
}

/* 提示信息 */
.tips {
  text-align: center;
  padding: 60rpx 40rpx;
}

.tip-text {
  font-size: 28rpx;
  color: #999;
}

.category-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.category-item:last-child {
  border-bottom: none;
}

.category-content {
  flex: 1;
}

.category-name {
  font-size: 30rpx;
  color: #333;
  display: block;
  margin-bottom: 8rpx;
}

.category-stage {
  font-size: 24rpx;
  color: #74b9ff;
  background: rgba(116, 185, 255, 0.1);
  padding: 4rpx 12rpx;
  border-radius: 20rpx;
  display: inline-block;
}

.arrow-icon {
  width: 36rpx;
  height: 36rpx;
  opacity: 0.5;
}

.category-item:active {
  background-color: #f9f9f9;
}

/* 帮助提示 */
.help-hint {
  margin-top: 0; /* 移除顶部间距，由search-section的margin-bottom控制 */
  margin-bottom: 30rpx; /* 提示与分类标签的间距 */
  padding: 20rpx;
  background: rgba(116, 185, 255, 0.05);
  border-radius: 16rpx;
  border-left: 4rpx solid #74b9ff;
}

.hint-text {
  font-size: 26rpx;
  color: #666;
  line-height: 1.4;
}

/* 响应式设计 */
@media (max-width: 375px) {
  .title {
    font-size: 42rpx;
  }
  
  .category-name {
    font-size: 28rpx;
  }
}
