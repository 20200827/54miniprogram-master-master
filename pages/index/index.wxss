/* index.wxss */


.title {
  font-size: 48rpx;
  font-weight: bold;
  margin-top: 60px;
  margin-bottom: 30rpx;
 
}

.subtitle {
  display: block;
  font-size: 28rpx;
  opacity: 0.9;
  margin-top: 10px;
}

.category-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.category-card {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
}

.category-card:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.card-icon {
  font-size: 60rpx;
  margin-right: 24rpx;
}

.card-content {
  flex: 1;
}

.card-title {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.card-desc {
  display: block;
  font-size: 24rpx;
  color: #666;
  line-height: 1.4;
}

.card-arrow {
  font-size: 32rpx;
  color: #999;
  font-weight: bold;
}

.footer {
  text-align: center;
  margin-bottom: 60px;
}

.footer-text {
  font-size: 24rpx;
  color: #999;
}
