/* 页面容器 */
.page-container {
  background-color: #f5f7fa;
  min-height: 100vh;
}

/* 页面头部 */
.header-section {
  padding-top: 20rpx;
  padding-bottom: 40rpx;
}

.header-bg {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 60rpx 40rpx;
  text-align: center;
  border-radius: 0 0 50rpx 50rpx;
  box-shadow: 0 10rpx 30rpx rgba(102, 126, 234, 0.3);
}

.header-title {
  font-size: 48rpx;
  font-weight: bold;
  color: #ffffff;
  display: block;
  margin-bottom: 16rpx;
}

.header-subtitle {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
  display: block;
}

/* 通用卡片样式 */
.section-card {
  background: #ffffff;
  margin: 0 30rpx 30rpx;
  border-radius: 20rpx;
  padding: 40rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.card-header {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.card-icon {
  font-size: 36rpx;
  margin-right: 16rpx;
}

.card-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #2c3e50;
}

/* 介绍部分 */
.intro-section {
  margin-top: -20rpx;
}

.intro-content {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.intro-item {
  display: flex;
  align-items: flex-start;
  padding: 20rpx;
  background: #f8f9fa;
  border-radius: 16rpx;
  transition: all 0.3s ease;
}

.intro-item:active {
  background: #e9ecef;
  transform: scale(0.98);
}

.intro-icon {
  font-size: 40rpx;
  margin-right: 20rpx;
  margin-top: 4rpx;
}

.intro-text {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.intro-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 8rpx;
}

.intro-desc {
  font-size: 24rpx;
  color: #666;
  line-height: 1.6;
}

/* 特色功能 */
.features-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 24rpx;
}

.feature-item {
  background: linear-gradient(135deg, #f5f7fa 0%, #e9ecef 100%);
  border-radius: 16rpx;
  padding: 32rpx 24rpx;
  text-align: center;
  transition: all 0.3s ease;
}

.feature-item:active {
  transform: translateY(-4rpx);
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.1);
}

.feature-icon {
  font-size: 48rpx;
  margin-bottom: 16rpx;
  display: block;
}

.feature-name {
  font-size: 26rpx;
  font-weight: 600;
  color: #333;
  display: block;
  margin-bottom: 8rpx;
}

.feature-desc {
  font-size: 22rpx;
  color: #666;
  display: block;
}

/* 反馈部分 */
.feedback-content {
  display: flex;
  flex-direction: column;
}

.feedback-textarea {
  width: 100%;
  min-height: 200rpx;
  padding: 24rpx;
  border: 2rpx solid #e1e8ed;
  border-radius: 16rpx;
  font-size: 28rpx;
  background: #f8f9fa;
  box-sizing: border-box;
  transition: all 0.3s ease;
}

.feedback-textarea:focus {
  border-color: #667eea;
  background: #ffffff;
  box-shadow: 0 0 0 4rpx rgba(102, 126, 234, 0.1);
}

.textarea-footer {
  display: flex;
  justify-content: flex-end;
  margin-top: 12rpx;
  margin-bottom: 24rpx;
}

.char-count {
  font-size: 24rpx;
  color: #999;
}

.submit-button {
  width: 100%;
  height: 88rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 44rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  border: none;
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.4);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.submit-button:active {
  transform: scale(0.95);
  box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.3);
}

.button-icon {
  font-size: 32rpx;
}

.button-text {
  font-size: 30rpx;
  color: #ffffff;
  font-weight: 500;
}

/* 常见问题 */
.faq-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.faq-item {
  background: #f8f9fa;
  border-radius: 16rpx;
  overflow: hidden;
  transition: all 0.3s ease;
}

.faq-question {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx;
  cursor: pointer;
}

.faq-question:active {
  background: #e9ecef;
}

.faq-q {
  font-size: 26rpx;
  font-weight: 500;
  color: #333;
  flex: 1;
  padding-right: 20rpx;
}

.faq-arrow {
  font-size: 24rpx;
  color: #666;
  transition: transform 0.3s ease;
}

.faq-answer {
  padding: 0 24rpx 24rpx;
  animation: slideDown 0.3s ease;
}

@keyframes slideDown {
  from {
    opacity: 0;
    transform: translateY(-10rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.faq-a {
  font-size: 24rpx;
  color: #666;
  line-height: 1.6;
}

/* 页脚 */
.footer-section {
  text-align: center;
  padding: 40rpx 30rpx 60rpx;
}

.footer-text {
  font-size: 28rpx;
  color: #666;
  display: block;
  margin-bottom: 12rpx;
}

.footer-desc {
  font-size: 24rpx;
  color: #999;
  display: block;
}

/* 响应式设计 */
@media (min-width: 750rpx) {
  .section-card {
    margin: 0 40rpx 40rpx;
    padding: 50rpx;
  }
  
  .features-grid {
    grid-template-columns: repeat(4, 1fr);
  }
}
