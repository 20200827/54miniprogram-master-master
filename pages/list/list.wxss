/* list.wxss */
.scrollarea {
  height: 100vh;
}

.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.search-box {
  position: relative;
  margin-bottom: 20rpx;
}

.search-input {
  width: 100%;
  height: 80rpx;
  background: white;
  border-radius: 40rpx;
  padding: 0 50rpx 0 30rpx;
  font-size: 28rpx;
  border: 2rpx solid #e5e5e5;
}

.search-icon {
  position: absolute;
  right: 24rpx;
  top: 50%;
  transform: translateY(-50%);
  font-size: 32rpx;
  color: #999;
}

.phrase-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.phrase-item {
  background: white;
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.phrase-header {
  padding: 30rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-bottom: 1rpx solid #f0f0f0;
  cursor: pointer;
}

.phrase-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  flex: 1;
}

.expand-icon {
  font-size: 24rpx;
  color: #666;
  transition: transform 0.3s ease;
}

.expand-icon.expanded {
  transform: rotate(180deg);
}

.phrase-content {
  overflow: hidden;
  transition: all 0.3s ease;
}

.phrase-content.hide {
  max-height: 0;
  opacity: 0;
}

.phrase-content.show {
  max-height: 2000rpx;
  opacity: 1;
  padding: 30rpx;
}

.template-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.template-item {
  border: 1rpx solid #e8e8e8;
  border-radius: 8rpx;
  padding: 20rpx;
  background: #fafafa;
}

.template-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 16rpx;
}

.template-type {
  font-size: 24rpx;
  color: #666;
  background: #e3f2fd;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-weight: bold;
}

.copy-btn {
  font-size: 24rpx;
  padding: 12rpx 24rpx;
  background: #1976d2;
  color: white;
  border: none;
  border-radius: 20rpx;
  line-height: 1;
}

.copy-btn:active {
  background: #1565c0;
}

.template-content {
  font-size: 28rpx;
  line-height: 1.6;
  color: #333;
  display: block;
}

.tips-section {
  margin-top: 24rpx;
  padding: 20rpx;
  background: #fff3e0;
  border-radius: 8rpx;
  border-left: 4rpx solid #ff9800;
}

.tips-label {
  font-size: 26rpx;
  font-weight: bold;
  color: #f57c00;
  display: block;
  margin-bottom: 8rpx;
}

.tips-content {
  font-size: 24rpx;
  color: #666;
  line-height: 1.5;
  display: block;
}

.empty-state {
  text-align: center;
  padding: 100rpx 0;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}
