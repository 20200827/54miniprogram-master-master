<!--list.wxml-->
<scroll-view class="scrollarea" scroll-y type="list">
  <view class="container">
    <view class="phrase-list">
      <view class="phrase-item" wx:for="{{phrases}}" wx:key="id">
        <view class="phrase-header" bindtap="toggleExpand" data-id="{{item.id}}">
          <text class="phrase-title">{{item.title}}</text>
          <view class="expand-icon {{expandedItems[item.id] ? 'expanded' : ''}}">▼</view>
        </view>
        
        <view class="phrase-content {{expandedItems[item.id] ? 'show' : 'hide'}}">
          <view class="tips-section" wx:if="{{item.tips}}">
            <text class="tips-label">💡 使用提示：</text>
            <text class="tips-content">{{item.tips}}</text>
          </view>
          
          <view class="template-list">
            <view class="template-item" wx:for="{{item.templates}}" wx:for-item="template" wx:key="type">
              <view class="template-header">
                <text class="template-type">{{template.type}}</text>
                <button class="copy-btn" bindtap="copyText" data-text="{{template.content}}">复制</button>
              </view>
              <text class="template-content">{{template.content}}</text>
            </view>
          </view>
        </view>
      </view>
    </view>
  </view>
</scroll-view>
